<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:screenOrientation="portrait"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.naveedroid.naveen.unitconverter.MainActivity"
    android:background="#ded9d9"
    android:gravity="center"
    android:foregroundGravity="center|fill">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:foregroundGravity="center"
        android:layout_gravity="center">


    </ScrollView>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="fill"
        android:padding="15dp"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/energy_btn"
                android:background="@drawable/flash"
                android:layout_gravity="left"
                android:padding="15dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/length_btn"
                android:background="@drawable/arrows"
                android:layout_gravity="center_horizontal"
                android:padding="15dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/pressure_btn"
                android:background="@drawable/networking"
                android:layout_gravity="left"
                android:padding="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Energy"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:textColor="#152ff3"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Length"
                android:id="@+id/textView2"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pressure"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/angle_btn"
                android:background="@drawable/shapes"
                android:layout_gravity="left"
                android:padding="15dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/temperature_btn"
                android:background="@drawable/temperature"
                android:layout_gravity="center_horizontal"
                android:padding="15dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/mass_btn"
                android:background="@drawable/tool"
                android:layout_gravity="left"
                android:padding="15dp" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Angle"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Temprature"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Mass"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/area_btn"
                android:background="@drawable/location"
                android:layout_gravity="left"
                android:padding="15dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/speed_btn"
                android:background="@drawable/silhouette"
                android:layout_gravity="center_horizontal"
                android:padding="15dp" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/frequency_btn"
                android:background="@drawable/medical"
                android:layout_gravity="left"
                android:padding="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Area"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Speed"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Frequency"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/volume_btn"
                android:background="@drawable/square"
                android:layout_gravity="left" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Volume"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#152ff3" />
        </TableRow>

    </TableLayout>

</FrameLayout>
